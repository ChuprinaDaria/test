# Google OAuth Credentials
# Получить на: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Better Auth Secret (сгенерировать: openssl rand -hex 32)
BETTER_AUTH_SECRET=your_32_byte_hex_secret_here

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5434/zerodotemail

# Redis
REDIS_URL=http://localhost:8079
REDIS_TOKEN=upstash-local-token

# Application URLs
VITE_PUBLIC_APP_URL=http://localhost:3000
VITE_PUBLIC_BACKEND_URL=http://localhost:8787
BETTER_AUTH_URL=http://localhost:3000

# Optional: Twilio for SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Optional: AI Features
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_MINI_MODEL=gpt-3.5-turbo
